//////   Spike counter//////////

objref apc, v1

proc insert_APC() {
apc = new APCount(0.5)
apc.thresh = $1
v1 = new Vector()
apc.record(v1)
}

//////    IClamp    ///////
objectvar clamp
proc insert_IClamp() {
     clamp = new IClamp(0.5)
     clamp.del = $3
     clamp.dur = $1
     clamp.amp = $2
}



            
